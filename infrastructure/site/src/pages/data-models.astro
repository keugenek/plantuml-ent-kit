---
import Base from '../layouts/Base.astro';
---

<Base title="Data Models">
  <div class="container">
    <header class="page-header">
      <h1>Data Models</h1>
      <p>Entity-relationship diagrams and database schemas</p>
    </header>

    <div class="pattern-grid" id="pattern-grid">
      <!-- Data models loaded dynamically -->
    </div>
  </div>
</Base>

<style>
  .page-header {
    padding: 2rem 0;
    border-bottom: 1px solid var(--border);
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--text-muted);
  }

  .pattern-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .pattern-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s;
    text-decoration: none;
  }

  .pattern-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .pattern-card .preview {
    background: #fff;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 150px;
  }

  .pattern-card .preview img {
    max-width: 100%;
    max-height: 150px;
  }

  .pattern-card .info {
    padding: 1rem;
  }

  .pattern-card h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .pattern-card p {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }

  .pattern-card .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
    background: var(--bg);
    border-radius: 4px;
    color: var(--text-muted);
  }
</style>

<script>
  async function loadDataModels() {
    try {
      const response = await fetch('/api/patterns.json');
      const data = await response.json();
      const dataModels = data.patterns.filter((p: any) => p.category === 'data');
      renderPatterns(dataModels);
    } catch (err) {
      console.error('Failed to load data models:', err);
    }
  }

  function renderPatterns(patterns: any[]) {
    const grid = document.getElementById('pattern-grid');
    if (!grid) return;

    if (patterns.length === 0) {
      grid.innerHTML = `
        <div class="empty-state">
          <p>Data models coming soon. Check back later or contribute your own!</p>
        </div>
      `;
      return;
    }

    grid.innerHTML = patterns.map(p => `
      <a href="/patterns/${p.slug}" class="pattern-card">
        <div class="preview">
          <img src="/catalogue/reference-architectures/images/${p.slug}.png"
               alt="${p.name}"
               loading="lazy"
               onerror="this.style.display='none'">
        </div>
        <div class="info">
          <h3>${p.name}</h3>
          <p>${p.description}</p>
          <div class="tags">
            ${p.keywords.slice(0, 4).map((k: string) => `<span class="tag">${k}</span>`).join('')}
          </div>
        </div>
      </a>
    `).join('');
  }

  loadDataModels();
</script>
