---
import Base from '../layouts/Base.astro';
---

<Base title="Patterns">
  <div class="container">
    <header class="page-header">
      <h1>Architecture Patterns</h1>
      <p>Browse all patterns or filter by category</p>
    </header>

    <div class="filters">
      <button class="filter active" data-category="all">All</button>
      <button class="filter" data-category="ai">AI/LLM</button>
      <button class="filter" data-category="data">Data Models</button>
      <button class="filter" data-category="enterprise">Enterprise</button>
      <button class="filter" data-category="research">Research</button>
    </div>

    <div class="pattern-grid" id="pattern-grid">
      <div class="loading">Loading patterns...</div>
    </div>
  </div>
</Base>

<style>
  .page-header {
    padding: 2rem 0;
    border-bottom: 1px solid var(--border);
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--text-muted);
  }

  .filters {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .filter {
    padding: 0.5rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 20px;
    color: var(--text);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter:hover,
  .filter.active {
    background: var(--accent);
    border-color: var(--accent);
    color: #fff;
  }

  .pattern-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .loading {
    grid-column: 1 / -1;
    text-align: center;
    color: var(--text-muted);
    padding: 2rem;
  }

  .pattern-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s;
    text-decoration: none;
  }

  .pattern-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .pattern-card .preview {
    background: #fff;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 150px;
  }

  .pattern-card .preview img {
    max-width: 100%;
    max-height: 150px;
  }

  .pattern-card .info {
    padding: 1rem;
  }

  .pattern-card h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .pattern-card p {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }

  .pattern-card .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
    background: var(--bg);
    border-radius: 4px;
    color: var(--text-muted);
  }

  .placeholder {
    background: var(--bg);
    color: var(--text-muted);
    padding: 2rem;
    text-align: center;
    font-size: 0.875rem;
  }
</style>

<script>
  // CDN configuration
  const CDN = {
    jsdelivr: 'https://cdn.jsdelivr.net/gh/keugenek/plantuml-ent-kit@main',
    github: 'https://raw.githubusercontent.com/keugenek/plantuml-ent-kit/main'
  };

  let patternsData: any = null;

  async function loadPatterns() {
    try {
      const response = await fetch('/api/patterns.json');
      patternsData = await response.json();
      renderPatterns(patternsData.patterns);
      setupFilters(patternsData.patterns);
    } catch (err) {
      console.error('Failed to load patterns:', err);
      document.getElementById('pattern-grid')!.innerHTML =
        '<div class="loading">Failed to load patterns. Please refresh.</div>';
    }
  }

  function getImageUrl(pattern: any): string {
    // Use pre-rendered images from CDN (fast, cached)
    if (pattern.images?.png) {
      return `${CDN.jsdelivr}/${pattern.images.png}`;
    }
    // Fallback to Kroki live render (slow)
    return `/kroki/plantuml/png`;
  }

  function renderPatterns(patterns: any[], category = 'all') {
    const grid = document.getElementById('pattern-grid');
    if (!grid) return;

    const filtered = category === 'all'
      ? patterns
      : patterns.filter(p => p.category === category);

    if (filtered.length === 0) {
      grid.innerHTML = '<div class="loading">No patterns found in this category.</div>';
      return;
    }

    grid.innerHTML = filtered.map(p => {
      const imgUrl = getImageUrl(p);
      const fallbackUrl = `${CDN.github}/${p.images?.png || ''}`;

      return `
        <a href="/pattern/${p.slug}" class="pattern-card" data-category="${p.category}">
          <div class="preview">
            <img src="${imgUrl}"
                 alt="${p.name}"
                 loading="lazy"
                 decoding="async"
                 data-fallback="${fallbackUrl}"
                 onerror="this.onerror=null; this.src=this.dataset.fallback || '/placeholder.svg'">
          </div>
          <div class="info">
            <h3>${p.name}</h3>
            <p>${p.description}</p>
            <div class="tags">
              ${(p.keywords || []).slice(0, 4).map((k: string) => `<span class="tag">${k}</span>`).join('')}
            </div>
          </div>
        </a>
      `;
    }).join('');
  }

  function setupFilters(patterns: any[]) {
    document.querySelectorAll('.filter').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.filter').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        const category = btn.getAttribute('data-category') || 'all';
        renderPatterns(patterns, category);
      });
    });
  }

  // Load on page ready
  loadPatterns();
</script>
