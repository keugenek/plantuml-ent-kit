---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Architecture patterns and data models as diagrams" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Pattern Diagrams</title>
  <link rel="preconnect" href="/kroki">
  <style is:global>
    :root {
      --bg: #0d1117;
      --bg-secondary: #161b22;
      --text: #c9d1d9;
      --text-muted: #8b949e;
      --accent: #58a6ff;
      --border: #30363d;
      --success: #3fb950;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
    }

    a {
      color: var(--accent);
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    header {
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border);
      padding: 1rem 2rem;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    header nav {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text);
    }

    .nav-links {
      display: flex;
      gap: 2rem;
      list-style: none;
    }

    .search-box {
      padding: 0.5rem 1rem;
      background: var(--bg);
      border: 1px solid var(--border);
      border-radius: 6px;
      color: var(--text);
      width: 250px;
    }

    .card {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 1.5rem;
      transition: border-color 0.2s;
    }

    .card:hover {
      border-color: var(--accent);
    }

    .badge {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      background: var(--border);
      border-radius: 4px;
      font-size: 0.75rem;
      color: var(--text-muted);
    }

    .badge.ai { background: #1f6feb33; color: #58a6ff; }
    .badge.data { background: #3fb95033; color: #3fb950; }
    .badge.enterprise { background: #a371f733; color: #a371f7; }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href="/" class="logo">üìê Pattern Diagrams</a>
      <ul class="nav-links">
        <li><a href="/patterns">Patterns</a></li>
        <li><a href="/data-models">Data Models</a></li>
        <li><a href="/editor">Live Editor</a></li>
        <li><a href="/api">API</a></li>
      </ul>
      <input type="search" class="search-box" placeholder="Search patterns..." id="search">
    </nav>
  </header>
  <main>
    <slot />
  </main>
  <script>
    // Client-side search
    document.getElementById('search')?.addEventListener('input', async (e) => {
      const query = e.target.value;
      if (query.length > 2) {
        const res = await fetch(`/api/patterns.json`);
        const data = await res.json();
        const results = data.patterns.filter(p =>
          p.name.toLowerCase().includes(query.toLowerCase()) ||
          p.keywords.some(k => k.toLowerCase().includes(query.toLowerCase()))
        );
        console.log('Search results:', results);
      }
    });
  </script>
</body>
</html>
